<?xml version="1.0" encoding="UTF-8"?>

<?import org.controlsfx.control.spreadsheet.*?>
<?import griffon.javafx.support.fontawesome.FontAwesomeIcon ?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ChoiceBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.mtv.DataTabController">
    <left>
        <VBox>
            <Button fx:id="plotButton" text="%Data.plot">
                <graphic>
                    <FontAwesomeIcon fontAwesome="FA_LINE_CHART"/>
                </graphic>
                <tooltip><Tooltip text="%Data.plotChart" /></tooltip>
            </Button>

            <Separator/>

            <Label text="%Data.insertInto" />
            <ChoiceBox fx:id="insertIntoChoiceBox" />

            <Separator />

            <Label text="%Data.weightedMean" />
            <Label text="%Data.analyses" />

            <ChoiceBox fx:id="analysesChoiceBox">
                <tooltip>
                    <Tooltip text="%Data.selectAnalyses"/>
                </tooltip>
            </ChoiceBox>

            <Label text="%Data.uncertainties" />
            <ChoiceBox fx:id="uncertaintyChoiceBox">
                <tooltip>
                    <Tooltip text="%Data.selectUncertainties"/>
                </tooltip>
            </ChoiceBox>

            <Separator />

            <Label text="%Data.reducedChiSquared" />
            <Label text="%Data.observed" />
            <ChoiceBox fx:id="observedColumnChoiceBox">
                <tooltip>
                    <Tooltip text="%Data.selectObservedColumn"/>
                </tooltip>
            </ChoiceBox>
            <Label text="%Data.expected" />
            <ChoiceBox fx:id="expectedColumnChoiceBox">
                <tooltip>
                    <Tooltip text="%Data.selectExpectedColumn"/>
                </tooltip>
            </ChoiceBox>

            <Separator />

            <Label text="%Data.kernelDensityEstimation" />
            <Label text="%Data.kernelFunction" />
            <ChoiceBox fx:id="kernelFunctionChoiceBox">
                <tooltip>
                    <Tooltip text="%Data.selectKernelFunction"/>
                </tooltip>
            </ChoiceBox>
        </VBox>
    </left>

    <center>
        <SpreadsheetView fx:id="spreadsheetView" />
    </center>

    <bottom>
        <Label text="%Data.statusBar" />
    </bottom>
</BorderPane>
